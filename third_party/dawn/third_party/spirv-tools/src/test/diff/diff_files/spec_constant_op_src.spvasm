          %5 = OpTypeVector %4 3
          %6 = OpConstant %4 1
          %7 = OpSpecConstantComposite %5 %6 %6 %6
          %8 = OpSpecConstantOp %4 CompositeExtract %7 2
          %9 = OpSpecConstantOp %4 CompositeExtract %7 1
         %10 = OpSpecConstantOp %4 CompositeExtract %7 0
          %1 = OpFunction %2 None %3
         %11 = OpLabel
               OpReturn
               OpFunctionEnd