material {
    name : Unlit,
    shadingModel : unlit,
    parameters : [
        {
            type : float3,
            name : baseColor
        },
        {
            type : float4,
            name : emissive
        }
    ],
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        material.baseColor.rgb = materialParams.baseColor;
        material.emissive = materialParams.emissive;
    }
}
