material {
    name : mipmapDepth,
    parameters : [
        {
            type : sampler2d,
            name : depth,
            precision: high
        },
        {
            type : int,
            name : level
        }
    ],
    variables : [
    ],
    domain : postprocess,
    depthWrite : true,
    depthCulling : false,
    culling: none
}

fragment {
    void postProcess(inout PostProcessInputs postProcess) {
        int level = materialParams.level;
        ivec2 xy = ivec2(gl_FragCoord.xy) * 2;
        gl_FragDepth = texelFetch(materialParams_depth, xy + ivec2(xy.x & 1, xy.y & 1), level).r;
    }
}
